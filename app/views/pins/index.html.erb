<%= render("homes/jambo") %>

<div id="pins" class="transitions-enabled clearfix">
  <div class='page'>
    <% @pins.each do |pin| %>

      <div class="box">    
        <div class="panel panel-default">
          <%= link_to(image_tag(pin.image.url()),pin) %><br />
          <div class="panel-body">       
              <%= pin.description %> <br />
              <span class="date"> 
                <%= pin.user.name if pin.user %> 
                <%= time_ago_in_words(pin.created_at) %> ago 
              </span>
          </div>
          <div class="panel-footer footer-color">
            
            <% if pin.user == current_user %>
              <%= link_to("Edit",   edit_pin_path(pin)) %>   
              <%= link_to('Delete', pin, method: :delete, data: {confirm: "Are you sure?"}) %>
            <% end %>    
            <%# <br > %>
          </div>
        </div>      
      </div>
    <% end %>
  </div>
</div>
<%#= will_paginate(@pins)%>
<div class="center">
  <%= will_paginate(@pins, renderer: BootstrapPagination::Rails) %>

</div>
  


